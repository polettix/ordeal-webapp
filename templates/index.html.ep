% layout 'default';
<div id="input">
   <form action="/" method="get">
      <input class="input text" name="n_cards" type="text" value="<%= $n_cards %>">
      <input class="input button" type="submit" value="Go!">
   </form>
</div>

<div id="icons">
% my $i = 0;
% for my $card ($cards->@*) {
<img class="icon" id="<%= $card->{id} %>" src="<%= $card->{url} %>" />
%     if (++$i % 3 == 0) {
         <br />
%     }
% }
</div>
