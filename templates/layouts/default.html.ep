<!DOCTYPE html>
<html>
   <head>
      <title>Ordeal</title>
      <style>
#input {
   text-align: center;
}
.input {
   font: bold 72px sans-serif;
   margin: 0.2em 0.2em;
}
.button {
   border: #aaa;
   border-radius: 10px;
   background: #eee;
   border: 2px solid #bbb;
   padding-left: 0.3em;
   padding-right: 0.3em;
}
.text {
   width: 1.5em;
   text-align: center;
}
textarea.text {
   width: 95%;
   height: 10em;
   text-align: left;
   font: normal 48px sans-serif;
}
div#icons {
   margin-top: 1em;
   text-align: center;
}
.icon {
   width: 30%;
   margin: 1%;
}
div#credits {
   text-align: center;
   font-size: 10pt;
}
div#footer ul {
   list-style-type: none;
   margin: 0;
   padding: 0;
   text-align: center;
}
div#footer ul li {
   display: inline;
   font: bold 36px sans-serif;
   padding: 0 0.3em;
   margin-top: 0.5em;
}
      </style>
   </head>
   <body>
      <%= content %>

      <div id="footer">
         <ul>
            <li><a href="<%= url_for('/') %>">home</a></li>
            <li><a href="<%= url_for('other') %>">other</a></li>
            <li><a href="<%= url_for('credits') %>">credits</a></li>
         <% if (my $e = $c->stash('expression')) { %>
            <li><a href="<%= url_for('emod')->query(expression => $e) %>">modify</a></li>
         <% } else { %>
            <li><a href="<%= url_for('emod') %>">compose</a></li>
         <% } %>
         </ul>
      </div>

   </body>
</html>
