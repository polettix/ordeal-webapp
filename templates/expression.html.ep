% layout 'default';

<div id="input">
   <form action="/e" method="get">
      <input name="expression" type="hidden" value="<%= $expression %>">
      <input class="input button" type="submit" value="Go!">
   </form>
</div>

<div id="icons">
% my $i = 0;
% for my $card ($cards->@*) {
<img class="icon" id="<%= $card->{id} %>" src="<%= $card->{url} %>" />
%     if (++$i % 3 == 0) {
         <br />
%     }
% }
</div>
